<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<!-- TODO = modify and expand the range of menus available from the menu menu, and develop game modes you can select when starting a new game -->
<!-- vertically stacked label and button -->


<Pane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="412.0" fitWidth="448.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/game_over.gif" />
         </image>
      </ImageView>
      <ImageView blendMode="SRC_ATOP" fitHeight="125.0" fitWidth="196.0" layoutX="131.0" layoutY="152.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/game_over_text.png" />
         </image>
      </ImageView>
      <!-- clicking button should start/resume the game -->
      <Button fx:id="exitButton" layoutX="181.0" layoutY="331.0" onAction="#handleExitGame" prefHeight="44.0" prefWidth="74.0" text="Exit" />
   </children>
</Pane>
